apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  annotations:
    meta.helm.sh/release-name: prometheus
    meta.helm.sh/release-namespace: monitoring
  creationTimestamp: "2025-11-07T19:25:29Z"
  generation: 1
  labels:
    app: kube-prometheus-stack
    app.kubernetes.io/instance: prometheus
    app.kubernetes.io/managed-by: Helm
    app.kubernetes.io/part-of: kube-prometheus-stack
    app.kubernetes.io/version: 79.4.0
    chart: kube-prometheus-stack-79.4.0
    heritage: Helm
    release: prometheus
  name: prometheus-kube-prometheus-kube-prometheus-general.rules
  namespace: monitoring
  resourceVersion: "71214"
  uid: 9d800c05-1f7f-4451-bfdd-948873c3987c
spec:
  groups:
  - name: kube-prometheus-general.rules
    rules:
    - expr: count without(instance, pod, node) (up == 1)
      record: count:up1
    - expr: count without(instance, pod, node) (up == 0)
      record: count:up0
